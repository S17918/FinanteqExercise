<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.presentation.task_details.TaskDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16sp"
        android:theme="@style/itemView">

        <ImageView
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/twotone_task_24"
            android:tint="@color/colorSecondary"
            tools:ignore="UseAppTint"
            android:layout_gravity="center"
            android:layout_margin="50sp"/>

        <TextView
            android:id="@+id/task_details_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/bold"
            android:textSize="22sp"
            android:layout_marginBottom="15sp"/>

        <androidx.cardview.widget.CardView
            app:cardElevation="0dp"
            app:cardCornerRadius="25px"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="15sp">
            <TextView
                android:id="@+id/task_details_category"
                android:paddingVertical="1dp"
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardElevation="0dp"
            app:cardCornerRadius="25px"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/task_details_date"
                android:paddingVertical="1dp"
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>